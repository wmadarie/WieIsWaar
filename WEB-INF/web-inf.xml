<?xml version="1.0" encoding="UTF-8"?>
<project name="web-inf" default="all">
  
  
  <property file="web-inf.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.web-inf.classpath">
    <pathelement location="${basedir}"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module WEB-INF -->
  
  <dirname property="module.web-inf.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.web-inf" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.web-inf" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.web-inf" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.web-inf" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="web-inf.output.dir" value="undefined"/>
  <property name="web-inf.testoutput.dir" value="undefined"/>
  
  <path id="web-inf.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="web-inf.module.production.classpath">
    <path refid="library.web-inf.classpath"/>
  </path>
  
  <path id="web-inf.runtime.production.module.classpath">
    <path refid="library.web-inf.classpath"/>
  </path>
  
  <path id="web-inf.module.classpath">
    <path refid="library.web-inf.classpath"/>
  </path>
  
  <path id="web-inf.runtime.module.classpath">
    <path refid="library.web-inf.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.web-inf">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.web-inf">
    <patternset refid="excluded.from.module.web-inf"/>
  </patternset>
  
  
  <target name="compile.module.web-inf" depends="compile.module.web-inf.production,compile.module.web-inf.tests" description="Compile module WEB-INF"/>
  
  <target name="compile.module.web-inf.production" depends="register.custom.compilers" description="Compile module WEB-INF; production classes"/>
  
  <target name="compile.module.web-inf.tests" depends="register.custom.compilers,compile.module.web-inf.production" description="compile module WEB-INF; test classes" unless="skip.tests"/>
  
  <target name="clean.module.web-inf" description="cleanup module">
    <delete dir="${web-inf.output.dir}"/>
    <delete dir="${web-inf.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.web-inf" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.web-inf" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>